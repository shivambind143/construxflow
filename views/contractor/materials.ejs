<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Materials Marketplace - ConstruxFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="brand">ConstruxFlow</div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/contractor/dashboard">My Projects</a>
                    <a class="nav-link" href="/contractor/add-project">Add Project</a>
                    <a class="nav-link" href="/contractor/applications">Applications</a>
                    <a class="nav-link active" href="/contractor/materials">Materials</a>
                    <a class="nav-link" href="/contractor/material-requests">My Requests</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="header">
                    <h3>Materials Marketplace</h3>
                    <p class="mb-0">Browse and request materials from suppliers</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Available Materials</h5>
                    </div>
                    <div class="card-body">
                        <% if (materials.length === 0) { %>
                            <p class="text-muted">No materials available at the moment.</p>
                        <% } else { %>
                            <div class="row">
                                <% materials.forEach(material => { %>
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title"><%= material.name %></h5>
                                                <p class="card-text">
                                                    <strong>Supplier:</strong> <%= material.supplier_name %><br>
                                                    <strong>Price:</strong> â‚¹<%= material.price.toLocaleString() %><br>
                                                    <strong>Available:</strong> <%= material.quantity %> units
                                                </p>
                                                <% if (projects.length > 0) { %>
                                                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#requestModal<%= material.id %>">
                                                        Request Material
                                                    </button>
                                                <% } else { %>
                                                    <p class="text-muted small">Create a project first to request materials</p>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Request Modal -->
                                    <div class="modal fade" id="requestModal<%= material.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Request <%= material.name %></h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form action="/contractor/materials/request" method="POST">
                                                    <div class="modal-body">
                                                        <input type="hidden" name="material_id" value="<%= material.id %>">
                                                        <div class="mb-3">
                                                            <label class="form-label">Select Project</label>
                                                            <select class="form-select" name="project_post_id" required>
                                                                <% projects.forEach(project => { %>
                                                                    <option value="<%= project.id %>">
                                                                        <%= project.description.substring(0, 50) %>...
                                                                    </option>
                                                                <% }); %>
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Quantity</label>
                                                            <input type="number" class="form-control" name="quantity" min="1" max="<%= material.quantity %>" required>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-primary">Send Request</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
