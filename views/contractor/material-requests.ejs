<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Material Requests - ConstruxFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="brand">ConstruxFlow</div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/contractor/dashboard">My Projects</a>
                    <a class="nav-link" href="/contractor/add-project">Add Project</a>
                    <a class="nav-link" href="/contractor/applications">Applications</a>
                    <a class="nav-link" href="/contractor/materials">Materials</a>
                    <a class="nav-link active" href="/contractor/material-requests">My Requests</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="header">
                    <h3>My Material Requests</h3>
                    <p class="mb-0">Track your material requests</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Request History</h5>
                    </div>
                    <div class="card-body">
                        <% if (requests.length === 0) { %>
                            <p class="text-muted">No material requests yet.</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Material</th>
                                            <th>Supplier</th>
                                            <th>Project</th>
                                            <th>Quantity</th>
                                            <th>Price per Unit</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>Requested On</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% requests.forEach(req => { %>
                                            <tr>
                                                <td><%= req.material_name %></td>
                                                <td><%= req.supplier_name %></td>
                                                <td><%= req.project_description.substring(0, 30) %>...</td>
                                                <td><%= req.quantity %></td>
                                                <td>₹<%= req.price.toLocaleString() %></td>
                                                <td>₹<%= (req.price * req.quantity).toLocaleString() %></td>
                                                <td>
                                                    <span class="badge badge-<%= req.status %>">
                                                        <%= req.status.toUpperCase() %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(req.created_at).toLocaleDateString() %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
