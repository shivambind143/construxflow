<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker Dashboard - ConstruxFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="brand">ConstruxFlow</div>
                <nav class="nav flex-column">
                    <a class="nav-link active" href="/worker/dashboard">My Applications</a>
                    <a class="nav-link" href="/worker/jobs">Browse Jobs</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="header">
                    <h3>My Applications</h3>
                    <p class="mb-0">Welcome back, <%= userName %>!</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Application Status</h5>
                    </div>
                    <div class="card-body">
                        <% if (applications.length === 0) { %>
                            <p class="text-muted">No applications yet. <a href="/worker/jobs">Browse available jobs</a></p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Project</th>
                                            <th>Location</th>
                                            <th>Worker Type</th>
                                            <th>Salary</th>
                                            <th>Contractor</th>
                                            <th>Status</th>
                                            <th>Applied On</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% applications.forEach(app => { %>
                                            <tr>
                                                <td><%= app.description.substring(0, 50) %>...</td>
                                                <td><%= app.location %></td>
                                                <td><%= app.worker_type %></td>
                                                <td>â‚¹<%= app.salary.toLocaleString() %></td>
                                                <td><%= app.contractor_name %></td>
                                                <td>
                                                    <span class="badge badge-<%= app.status %>">
                                                        <%= app.status.toUpperCase() %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(app.created_at).toLocaleDateString() %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
