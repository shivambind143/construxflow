<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse Jobs - ConstruxFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="brand">ConstruxFlow</div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/worker/dashboard">My Applications</a>
                    <a class="nav-link active" href="/worker/jobs">Browse Jobs</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="header">
                    <h3>Available Jobs</h3>
                    <p class="mb-0">Find your next opportunity</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Job Listings</h5>
                    </div>
                    <div class="card-body">
                        <% if (jobs.length === 0) { %>
                            <p class="text-muted">No jobs available at the moment. Check back later!</p>
                        <% } else { %>
                            <div class="row">
                                <% jobs.forEach(job => { %>
                                    <div class="col-md-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title"><%= job.worker_type %> Needed</h5>
                                                <p class="card-text"><%= job.description %></p>
                                                <ul class="list-unstyled">
                                                    <li><strong>Location:</strong> <%= job.location %></li>
                                                    <li><strong>Workers Required:</strong> <%= job.workers_required %></li>
                                                    <li><strong>Salary:</strong> â‚¹<%= job.salary.toLocaleString() %></li>
                                                    <li><strong>Posted:</strong> <%= new Date(job.created_at).toLocaleDateString() %></li>
                                                </ul>
                                                <form action="/worker/jobs/apply" method="POST">
                                                    <input type="hidden" name="project_post_id" value="<%= job.id %>">
                                                    <button type="submit" class="btn btn-primary">Apply Now</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
