<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supplier Dashboard - ConstruxFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="brand">ConstruxFlow</div>
                <nav class="nav flex-column">
                    <a class="nav-link active" href="/supplier/dashboard">My Inventory</a>
                    <a class="nav-link" href="/supplier/add-material">Add Material</a>
                    <a class="nav-link" href="/supplier/requests">Material Requests</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="header">
                    <h3>My Inventory</h3>
                    <p class="mb-0">Welcome back, <%= userName %>!</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Material Inventory</h5>
                    </div>
                    <div class="card-body">
                        <% if (materials.length === 0) { %>
                            <p class="text-muted">No materials in inventory. <a href="/supplier/add-material">Add your first material</a></p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Material Name</th>
                                            <th>Quantity</th>
                                            <th>Price per Unit</th>
                                            <th>Total Value</th>
                                            <th>Added On</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% materials.forEach(material => { %>
                                            <tr>
                                                <td><%= material.name %></td>
                                                <td>
                                                    <%= material.quantity %> units
                                                    <% if (material.quantity < 10) { %>
                                                        <span class="badge bg-warning text-dark">Low Stock</span>
                                                    <% } %>
                                                </td>
                                                <td>₹<%= material.price.toLocaleString() %></td>
                                                <td>₹<%= (material.price * material.quantity).toLocaleString() %></td>
                                                <td><%= new Date(material.created_at).toLocaleDateString() %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
